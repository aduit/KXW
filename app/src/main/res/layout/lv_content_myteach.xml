<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    >
<!--    android:background="@drawable/img_listviet_background"
-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pro_photo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/img_photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="教你如何处理团队矛盾" />

            <TextView
                android:id="@+id/tv_pro_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队冲突指的是两个或两个以上的团队在目标、利益、认识等方……
" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_teach"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:background="@drawable/img_learn_bg"
                android:text="直播/回放" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="789人"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
